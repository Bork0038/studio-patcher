{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "studio-patcher",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": false,
        "ask": false,
        "confirm": false,
        "message": false,
        "open": true,
        "save": false
      },
      "window": {
        "startDragging": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
    
        "icons/icon.ico"
      ],
      "identifier": "com.studiopatcher.dev",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "studio-patcher",
        "minHeight": 700,
        "minWidth": 950,
        "width": 1024,
        "height": 768,
        "decorations": false
      }
    ]
  }
}
